{
  "manifest_version": 2,
  "name": "Minds Darker",
  "author": "Darko Pendragon",
  "description": "Attempts to make Minds.com's dark mode better",
  "version": "1.2",
  "icons": {
    "16": "./assets/icon.png",
    "48": "./assets/icon.png",
    "128": "./assets/icon.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.minds.com/*"
      ],
      "js": ["./js/jquery.min.js","./js/jquery.initialize.min.js","./js/content.js"],
      "css": ["./assets/root.css","./assets/testing.css"]
    }
  ],
  "background": {
    "matches": [
      "https://www.minds.com/*"
    ],
    "scripts": ["./js/background.js"]
  },
  "browser_action": {
    "default_title": "Minds Darker",
    "default_icon": "./assets/icon.png",
    "default_popup": "./popup/popup.html"
  }
}
